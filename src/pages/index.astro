---
import QuickStart from "@/components/index/QuickStart.astro";
import Container from "@/components/ui/Container.astro";
import Hero from "@/components/ui/Hero.astro";
import { BsBox, BsCodeSlash, BsGrid1X2, BsLightningCharge, BsSliders, BsUniversalAccess } from "mjo-icons/bs";
import LandingLayout from "../layouts/LandingLayout.astro";

import { ComponentsCloud } from "@/components/lit/components-cloud.ts";
import FeatureCard from "@/components/ui/FeatureCard.astro";
---

<LandingLayout>
    <!-- Hero Section -->
    <Hero />

    <!-- Components cloud -->
    <Container class="py-12" tag="section">
        <ComponentsCloud client:only />
    </Container>

    <!-- Features Section -->
    <Container class="pt-5 pb-16" tag="section">
        <div class="features-container">
            <div class="features-header">
                <p class="features-title">Why Choose <strong class="border-b-secondary border-b-2">MJO LITUI</strong>?</p>
                <h2 class="features-description">Built with Lit Element and developer experience in mind.</h2>
            </div>

            <div class="features-grid">
                <FeatureCard icon={BsLightningCharge} title="Lightning Fast">
                    Built on Lit for optimal performance with minimal bundle size and efficient updates.
                </FeatureCard>

                <FeatureCard icon={BsGrid1X2} title="Fully Responsive">
                    Components adapt beautifully to any screen size with mobile-first design principles.
                </FeatureCard>

                <FeatureCard icon={BsUniversalAccess} title="Accessible First">
                    WCAG 2.1 compliant components with keyboard navigation and screen reader support.
                </FeatureCard>

                <FeatureCard icon={BsSliders} title="Highly Customizable"> Extensive theming system with CSS custom properties and design tokens. </FeatureCard>

                <FeatureCard icon={BsCodeSlash} title="Developer Friendly">
                    Full TypeScript support, excellent documentation, and intuitive API design.
                </FeatureCard>

                <FeatureCard icon={BsBox} title="Web Standards Based">
                    Built on native Web Components and Custom Elements for maximum compatibility and future-proofing.
                </FeatureCard>
            </div>
        </div>
    </Container>

    <!-- Quick Start Section -->
    <Container class="py-8" tag="section">
        <QuickStart />
    </Container>

    <!-- Component Compound Example -->
    <Container class="py-8" tag="section"> Components compound example, for example a product card or a user profile card. </Container>

    <style>
        @reference "../styles/global.css";

        .features-header {
            @apply text-center mb-8;
        }

        .features-title {
            @apply text-xl font-bold mb-2 md:text-3xl;
        }

        .features-grid {
            @apply mx-auto mt-16 max-w-2xl grid grid-cols-1 gap-8 sm:mt-20 lg:mt-24 lg:max-w-none lg:grid-cols-3 lg:gap-10;
        }
    </style>
</LandingLayout>
