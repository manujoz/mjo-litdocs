---
import { BsBox, BsCodeSlash, BsLightningCharge, BsServer, BsSliders, BsUniversalAccess } from "mjo-icons/bs";

import QuickStart from "@/components/index/QuickStart.astro";
import { ComponentsCloud } from "@/components/lit/components-cloud.ts";
import { ThemingExample } from "@/components/lit/theming-example";
import Container from "@/components/ui/Container.astro";
import FeatureCard from "@/components/ui/FeatureCard.astro";
import Hero from "@/components/ui/Hero.astro";
import Typography from "@/components/ui/Typography.astro";
import LandingLayout from "../layouts/LandingLayout.astro";

// SEO metadata
const seoData = {
    title: "MJO LITUI - Modern Lit Element Component Library",
    description:
        "Build beautiful, accessible web applications with MJO LITUI - A comprehensive Lit Element component library with TypeScript support, modern design, and excellent developer experience.",
    keywords: "lit element, web components, ui library, typescript, javascript, modern ui, component library, lit framework, web development",
    ogImage: "/og-homepage.jpg",
    canonicalUrl: "https://mjo-litui.dev",
};
---

<LandingLayout {...seoData}>
    <!-- Hero Section -->
    <Hero />

    <!-- Components cloud -->
    <Container class="components-cloud-section" tag="section">
        <ComponentsCloud client:only />
    </Container>

    <!-- Features Section -->
    <Container class="features-section" tag="section">
        <div class="features-container">
            <div class="features-header">
                <p class="features-title">Why Choose <strong class="features-title-highlight">MJO LITUI</strong>?</p>
                <h2 class="features-description">Built with Lit Element and developer experience in mind.</h2>
            </div>

            <div class="features-grid">
                <FeatureCard icon={BsLightningCharge} title="Lightning Fast">
                    Built on Lit for optimal performance with minimal bundle size and efficient updates.
                </FeatureCard>

                <FeatureCard icon={BsServer} title="SSR Support">
                    Server side rendering (SSR) support with @lit-labs/ssr and responsive design out of the box.
                </FeatureCard>

                <FeatureCard icon={BsUniversalAccess} title="Accessible First">
                    WCAG 2.1 compliant components with keyboard navigation and screen reader support.
                </FeatureCard>

                <FeatureCard icon={BsSliders} title="Highly Customizable"> Extensive theming system with CSS custom properties and design tokens. </FeatureCard>

                <FeatureCard icon={BsCodeSlash} title="Developer Friendly">
                    Full TypeScript support, excellent documentation, and intuitive API design.
                </FeatureCard>

                <FeatureCard icon={BsBox} title="Web Standards Based">
                    Built on native Web Components and Custom Elements for maximum compatibility and future-proofing.
                </FeatureCard>
            </div>
        </div>
    </Container>

    <Container tag="section" class="theming-example">
        <div class="theming-description">
            <Typography tag="h3" weight="bold" size="title" color="secondary" class="theming-title">Customize your theme, make it your own</Typography>
            <Typography tag="p" size="md" color="default" class="theming-text">
                <span class="theming-highlight">MJOLITUI</span> allows a high level of customization. Not only do you get a powerful library, but you can also make
                it your own so your site has a completely unique look.
            </Typography>
        </div>
        <div class="theming-preview">
            <ThemingExample client:only />
        </div>
    </Container>

    <!-- Quick Start Section -->
    <Container class="quick-start-section" tag="section">
        <QuickStart />
    </Container>

    <!-- Component Compound Example -->
    <Container class="compound-example-section" tag="section"> Components compound example, for example a product card or a user profile card. </Container>

    <style>
        .components-cloud-section {
            padding-top: 3rem;
            padding-bottom: 3rem;
            height: 700px;
            overflow-x: hidden;
        }

        .features-section {
            padding-top: 1.25rem;
            padding-bottom: 4rem;
        }

        .quick-start-section,
        .compound-example-section {
            padding-top: 2rem;
            padding-bottom: 2rem;
        }

        .features-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .features-title {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        @media (min-width: 768px) {
            .features-title {
                font-size: 1.875rem;
            }
        }

        .features-title-highlight {
            border-bottom: 2px solid var(--mjo-secondary-color);
        }

        .features-grid {
            margin-left: auto;
            margin-right: auto;
            margin-top: 4rem;
            max-width: 42rem;
            display: grid;
            grid-template-columns: repeat(1, minmax(0, 1fr));
            gap: 2rem;
        }

        @media (min-width: 640px) {
            .features-grid {
                margin-top: 5rem;
            }
        }

        @media (min-width: 1024px) {
            .features-grid {
                margin-top: 6rem;
                max-width: none;
                grid-template-columns: repeat(3, minmax(0, 1fr));
                gap: 2.5rem;
            }
        }

        .theming-example {
            display: grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 2rem;
            height: 24rem;
        }

        .theming-description {
            justify-content: center;
            flex-direction: column;
            display: flex;
            gap: 1rem;
        }

        .theming-preview {
            align-items: center;
            display: flex;
            justify-content: center;
        }

        .theming-highlight {
            text-decoration: underline;
            text-underline-offset: 4px;
            text-decoration-color: var(--mjo-secondary-color);
            color: var(--mjo-primary-color);
            font-weight: 700;
            text-decoration-thickness: 2px;
        }
    </style>
</LandingLayout>
