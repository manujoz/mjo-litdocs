---
import LandingLayout from "../layouts/LandingLayout.astro";
import Hero from "@/components/ui/hero/Hero.astro";
---

<LandingLayout>
    <Hero />

    <!-- Features Section -->
    <section class="features-section">
        <div class="features-container">
            <div class="features-header">
                <h2 class="features-title">Why Choose MJO-LITUI?</h2>
                <p class="features-description">Built with modern web standards and developer experience in mind.</p>
            </div>

            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                    </div>
                    <h3 class="feature-title">Lightning Fast</h3>
                    <p class="feature-description">Built on Lit for optimal performance with minimal bundle size and efficient updates.</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="feature-title">Fully Responsive</h3>
                    <p class="feature-description">Components adapt beautifully to any screen size with mobile-first design principles.</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <h3 class="feature-title">Accessible First</h3>
                    <p class="feature-description">WCAG 2.1 compliant components with keyboard navigation and screen reader support.</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="feature-title">Highly Customizable</h3>
                    <p class="feature-description">Extensive theming system with CSS custom properties and design tokens.</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                        </svg>
                    </div>
                    <h3 class="feature-title">Developer Friendly</h3>
                    <p class="feature-description">Full TypeScript support, excellent documentation, and intuitive API design.</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                        </svg>
                    </div>
                    <h3 class="feature-title">Framework Agnostic</h3>
                    <p class="feature-description">Works with any framework or vanilla JavaScript. Easy integration anywhere.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Start Section -->
    <section class="quickstart-section">
        <div class="quickstart-container">
            <div class="quickstart-content">
                <h2 class="quickstart-title">Get Started in Seconds</h2>
                <p class="quickstart-description">Install MJO-LITUI and start building beautiful interfaces right away.</p>

                <div class="code-example">
                    <div class="code-header">
                        <div class="code-tabs">
                            <button class="code-tab code-tab-active" data-tab="npm">npm</button>
                            <button class="code-tab" data-tab="yarn">yarn</button>
                            <button class="code-tab" data-tab="pnpm">pnpm</button>
                        </div>
                        <button class="code-copy" title="Copy to clipboard">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </button>
                    </div>
                    <div class="code-content">
                        <pre class="language-bash code-block" data-content="npm"><code class="language-bash">npm install mjo-litui</code></pre>
                        <pre
                            class="language-bash code-block"
                            data-content="yarn"
                            style="display: none;"><code class="language-bash">yarn add mjo-litui</code></pre>
                        <pre
                            class="language-bash code-block"
                            data-content="pnpm"
                            style="display: none;"><code class="language-bash">pnpm add mjo-litui</code></pre>
                    </div>
                </div>

                <div class="quickstart-next">
                    <p class="text-muted-foreground">Then import components and start building:</p>
                    <a href="/docs/quick-start" class="quickstart-link"> View Quick Start Guide â†’ </a>
                </div>
            </div>

            <!-- Usage Example -->
            <div class="quickstart-example">
                <h3 class="example-title">Quick Example</h3>
                <div class="code-example">
                    <div class="code-header">
                        <span class="code-language">JavaScript</span>
                        <button class="code-copy" title="Copy to clipboard">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </button>
                    </div>
                    <div class="code-content">
                        <pre
                            class="language-javascript"><code class="language-javascript">{`import { MjoButton, MjoCard } from 'mjo-litui';

// Use anywhere in your HTML
<mjo-button variant="primary" size="lg">
  Get Started
</mjo-button>

<mjo-card>
  <h2 slot="header">Welcome</h2>
  <p>Beautiful components, minimal setup.</p>
</mjo-card>`}</code></pre>
                    </div>
                </div>
            </div>
        </div>
    </section>
</LandingLayout>

<script>
    // Code tab switching
    document.addEventListener("DOMContentLoaded", () => {
        const tabs = document.querySelectorAll(".code-tab") as NodeListOf<HTMLElement>;
        const blocks = document.querySelectorAll(".code-block") as NodeListOf<HTMLElement>;

        tabs.forEach((tab) => {
            tab.addEventListener("click", () => {
                const target = tab.dataset.tab;

                // Update tab states
                tabs.forEach((t) => t.classList.remove("code-tab-active"));
                tab.classList.add("code-tab-active");

                // Update code block visibility
                blocks.forEach((block) => {
                    if (block.dataset.content === target) {
                        block.style.display = "block";
                    } else {
                        block.style.display = "none";
                    }
                });
            });
        });

        // Copy functionality
        const copyBtn = document.querySelector(".code-copy") as HTMLElement;
        copyBtn?.addEventListener("click", () => {
            const activeBlock = document.querySelector('.code-block[style="display: block;"], .code-block:not([style])');
            const text = activeBlock?.textContent || "";

            navigator.clipboard.writeText(text).then(() => {
                // Show feedback
                const originalHTML = copyBtn.innerHTML;
                copyBtn.innerHTML = `
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        `;

                setTimeout(() => {
                    copyBtn.innerHTML = originalHTML;
                }, 2000);
            });
        });
    });
</script>

<style>
    .features-section {
        padding-top: 6rem;
        padding-bottom: 6rem;
    }

    @media (min-width: 640px) {
        .features-section {
            padding-top: 8rem;
            padding-bottom: 8rem;
        }
    }

    .features-header {
        margin-left: auto;
        margin-right: auto;
        max-width: 42rem;
        text-align: center;
        margin-bottom: 4rem;
    }

    .features-grid {
        margin-left: auto;
        margin-right: auto;
        margin-top: 4rem;
        max-width: 42rem;
        display: grid;
        grid-template-columns: 1fr;
        gap: 4rem;
    }

    @media (min-width: 640px) {
        .features-grid {
            margin-top: 5rem;
        }
    }

    @media (min-width: 1024px) {
        .features-grid {
            margin-top: 6rem;
            max-width: none;
            grid-template-columns: repeat(3, 1fr);
            column-gap: 2rem;
            row-gap: 4rem;
        }
    }

    .feature-item {
        display: flex;
        flex-direction: column;
    }

    .feature-icon {
        width: 2rem;
        height: 2rem;
        color: oklch(var(--color-primary));
        margin-bottom: 1rem;
    }

    .feature-title {
        font-size: 1rem;
        font-weight: 600;
        line-height: 1.75;
        color: oklch(var(--color-foreground));
        margin-bottom: 0.5rem;
    }

    .feature-description {
        font-size: 1rem;
        line-height: 1.75;
        color: oklch(var(--color-muted-foreground));
    }
</style>
