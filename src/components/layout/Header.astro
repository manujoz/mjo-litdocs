---
import { ThemeToggle } from "@/components/lit/theme-toggle";
import Button from "@/components/ui/Button.astro";
import GitHub from "@/icons/brand-github.svg";
import Search from "@/icons/search.svg";
import { navigationMenu } from "@/utils/navigation";
import Logo from "../ui/Logo.astro";

import { MobileNavigation } from "@/components/lit/mobile-navigation";

export interface Props {
    currentPath?: string;
}

const { currentPath = "" } = Astro.props;

// Force Tailwind to include these utility classes
// border-border bg-background/95 bg-background/60 backdrop-blur-sm text-muted-foreground
---

<header class="site-header">
    <div class="site-header-inner">
        <!-- Logo and Brand -->
        <div class="logo-container">
            <a href="/" class="site-logo">
                <Logo type="horizontal" />
            </a>
        </div>

        <!-- Desktop Navigation -->
        <nav class="site-nav">
            {
                navigationMenu.map((item) => (
                    <a href={item.href} class={`site-nav-link ${currentPath.startsWith(item.href) ? "site-nav-link-active" : ""}`}>
                        {item.name}
                    </a>
                ))
            }
        </nav>

        <!-- Actions -->
        <div class="actions">
            <!-- Search Button (placeholder) -->
            <Button variant="ghost" size="sm" class="button-flex" aria-label="Search" title="Search documentation">
                <Search class="w-5 h-5" />
                <span class="sr-only">Search</span>
            </Button>

            <!-- GitHub Link -->
            <Button
                href="https://github.com/manujoz/mjo-litui"
                variant="ghost"
                class="button-flex"
                size="sm"
                aria-label="GitHub repository"
                title="View on GitHub"
                target="_blank"
                rel="noopener noreferrer"
            >
                <GitHub class="w-5 h-5" />
                <span class="sr-only">GitHub</span>
            </Button>

            <!-- Theme Toggle -->
            <ThemeToggle />

            <div class="mobile-navigation md:hidden">
                <MobileNavigation client:only />
            </div>
        </div>
    </div>

    <!-- Mobile Navigation Overlay -->
    <div id="mobile-nav-overlay" class="mobile-nav-overlay mobile-nav-closed">
        <div class="mobile-nav-content mobile-nav-closed" id="mobile-nav-content">
            <div class="mobile-nav-header">
                <div class="site-logo">
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                    <span>MJO-LITUI</span>
                </div>
                <button id="mobile-nav-close" class="btn-ghost btn-sm" aria-label="Close mobile menu">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <nav class="mobile-nav-body">
                <div class="space-y-1">
                    {
                        navigationMenu.map((item) => (
                            <a href={item.href} class={`sidebar-nav-link ${currentPath.startsWith(item.href) ? "sidebar-nav-link-active" : ""}`}>
                                {item.name}
                            </a>
                        ))
                    }
                </div>

                <!-- Mobile Actions -->
                <div class="mt-8 pt-8 border-t border-border">
                    <div class="space-y-4">
                        <Button href="https://github.com/username/mjo-litui" variant="outline" class="w-full">
                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                                <path
                                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                                ></path>
                            </svg>
                            View on GitHub
                        </Button>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</header>

<style>
    @reference "../../styles/global.css";

    .site-header {
        @apply sticky top-0 z-50 w-full bg-background/95 backdrop-blur-sm pl-3 pr-3;
    }

    @supports (backdrop-filter: blur(8px)) {
        .site-header {
            @apply bg-background/60;
        }
    }

    .site-header-inner {
        @apply flex h-16 items-center justify-between;
    }

    .logo-container {
        @apply relative flex-none w-48;
    }

    .site-logo {
        @apply relative transition-opacity duration-300;
    }

    .site-logo:hover {
        @apply opacity-80;
    }

    .site-nav {
        @apply hidden grow justify-center self-stretch items-stretch gap-6 md:flex;
    }

    .site-nav-link {
        @apply text-sm font-medium text-muted-foreground transition-colors duration-200 flex items-center no-underline;
    }

    .site-nav-link:hover {
        @apply text-foreground;
    }

    .site-nav-link-active {
        @apply text-foreground;
    }
    .actions {
        @apply flex w-48 items-end justify-end gap-1;
    }
    .button-flex {
        @apply hidden md:flex;
    }
</style>
