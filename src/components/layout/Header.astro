---
import { ThemeToggle } from "@/components/lit/theme-toggle";
import Button from "@/components/ui/Button.astro";
import GitHub from "@/icons/brand-github.svg";
import Search from "@/icons/search.svg";
import { navigationMenu } from "@/utils/navigation";
import Logo from "../ui/Logo.astro";

import { MobileNavigation } from "@/components/lit/mobile-navigation";

export interface Props {
    currentPath?: string;
}

const { currentPath = "" } = Astro.props;
---

<header class="site-header">
    <div class="site-header-inner">
        <!-- Logo and Brand -->
        <div class="logo-container">
            <a href="/" class="site-logo">
                <Logo type="horizontal" />
            </a>
        </div>

        <!-- Desktop Navigation -->
        <nav class="site-nav" aria-label="Main navigation">
            {
                navigationMenu.map((item) => (
                    <a
                        href={item.href}
                        class={`site-nav-link ${currentPath.startsWith(item.href) ? "site-nav-link-active" : ""}`}
                        aria-current={currentPath.startsWith(item.href) ? "page" : undefined}
                    >
                        {item.name}
                    </a>
                ))
            }
        </nav>

        <!-- Actions -->
        <div class="actions">
            <!-- Search Button (placeholder) -->
            <Button variant="ghost" size="sm" aria-label="Search" title="Search documentation">
                <Search class="icon" />
                <span class="sr-only">Search</span>
            </Button>

            <!-- GitHub Link -->
            <Button
                href="https://github.com/manujoz/mjo-litui"
                variant="ghost"
                class="button-flex"
                size="sm"
                aria-label="GitHub repository"
                title="View on GitHub"
                target="_blank"
                rel="noopener noreferrer"
            >
                <GitHub class="icon" />
                <span class="sr-only">GitHub</span>
            </Button>

            <!-- Theme Toggle -->
            <Button class="button-flex toggle-button" variant="ghost" size="sm">
                <ThemeToggle />
            </Button>

            <div class="mobile-navigation">
                <MobileNavigation client:only />
            </div>
        </div>
    </div>
</header>

<style>
    .site-header {
        position: sticky;
        top: 0;
        z-index: 20;
        width: 100%;
        background-color: color-mix(in srgb, var(--mjo-background-color) 20%, transparent);
        backdrop-filter: blur(8px);
        padding: 0 12px;
        display: flex;
        justify-content: center;
        box-sizing: border-box;
    }

    .site-header-inner {
        display: flex;
        flex: 1 1 0;
        height: 64px;
        justify-content: space-between;
        align-items: center;
        max-width: 1280px;
    }

    .logo-container {
        position: relative;
        width: 192px;
        flex: none;
    }

    .site-logo {
        position: relative;
        transition: opacity 300ms;
    }

    .site-logo:hover {
        opacity: 0.8;
    }

    .site-nav {
        display: none;
        flex-grow: 1;
        justify-content: center;
        align-self: stretch;
    }

    .site-nav-link {
        font-size: 14px;
        font-weight: 500;
        color: var(--mjo-foreground-color-low);
        text-decoration-line: none;
        display: flex;
        align-items: center;
        transition: color 200ms;
    }
    .site-nav-link:hover {
        color: var(--mjo-foreground-color);
    }

    .site-nav-link-active {
        color: var(--mjo-primary-color);
    }
    .actions {
        position: relative;
        display: flex;
        width: 192px;
        justify-content: flex-end;
        gap: 4px;
    }
    .icon {
        width: 20px;
        height: 20px;
    }
    .button-flex {
        position: relative;
        display: none;
        font-size: 20px;
    }
    .toggle-button {
        padding-left: 0;
        padding-right: 0;
    }
    .mobile-navigation {
        width: 35px;
        align-self: stretch;
    }

    @media (min-width: 768px) {
        .site-nav {
            display: flex;
            gap: 24px;
            align-items: stretch;
        }
        .button-flex {
            display: flex;
        }
        .mobile-navigation {
            display: none;
        }
    }
</style>
