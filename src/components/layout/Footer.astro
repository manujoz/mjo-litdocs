---
import Container from "../ui/Container.astro";
---

<footer class="site-footer">
    <Container tag="div">
        <div class="footer-grid">
            <!-- Documentation Links -->
            <div class="footer-section">
                <h3 class="footer-title">Documentation</h3>
                <ul class="footer-links">
                    <li>
                        <a href="/docs" class="footer-link">Getting Started</a>
                    </li>
                    <li>
                        <a href="/docs/installation" class="footer-link">Installation</a>
                    </li>
                    <li>
                        <a href="/docs/components" class="footer-link">Components</a>
                    </li>
                    <li>
                        <a href="/docs/examples" class="footer-link">Examples</a>
                    </li>
                </ul>
            </div>

            <!-- Community Links -->
            <div class="footer-section">
                <h3 class="footer-title">Community</h3>
                <ul class="footer-links">
                    <li>
                        <a href="https://github.com/manujoz/mjo-litui" class="footer-link" target="_blank" rel="noopener noreferrer"> GitHub </a>
                    </li>
                    <li>
                        <a href="https://github.com/manujoz/mjo-litui/issues" class="footer-link" target="_blank" rel="noopener noreferrer"> Issues </a>
                    </li>
                    <li>
                        <a href="https://github.com/manujoz/mjo-litui/discussions" class="footer-link" target="_blank" rel="noopener noreferrer">
                            Discussions
                        </a>
                    </li>
                    <li>
                        <a href="https://github.com/manujoz/mjo-litui/releases" class="footer-link" target="_blank" rel="noopener noreferrer"> Releases </a>
                    </li>
                </ul>
            </div>

            <!-- Resources -->
            <div class="footer-section">
                <h3 class="footer-title">Resources</h3>
                <ul class="footer-links">
                    <li>
                        <a href="/docs/themes" class="footer-link">Theming Guide</a>
                    </li>
                    <li>
                        <a href="/docs/accessibility" class="footer-link">Accessibility</a>
                    </li>
                    <li>
                        <a href="/docs/contributing" class="footer-link">Contributing</a>
                    </li>
                    <li>
                        <a href="/docs/changelog" class="footer-link">Changelog</a>
                    </li>
                </ul>
            </div>
        </div>
    </Container>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
        <Container tag="div">
            <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                <p class="footer-bottom-text">
                    © {new Date().getFullYear()} MJO LITUI. Built with ❤️ for the web component community.
                </p>

                <div class="flex items-center gap-4">
                    <a href="https://github.com/manujoz/mjo-litui/blob/main/LICENSE" class="footer-bottom-text link" target="_blank" rel="noopener noreferrer">
                        MIT License
                    </a>
                    <span class="footer-bottom-text">•</span>
                    <a href="/privacy" class="footer-bottom-text link"> Privacy </a>
                    <span class="footer-bottom-text">•</span>
                    <a href="/sitemap.xml" class="footer-bottom-text link"> Sitemap </a>
                </div>
            </div>
        </Container>
    </div>
</footer>

<style>
    .site-footer {
        border-top: solid 1px var(--mjo-border-color-low);
        background-color: color-mix(in srgb, var(--mjo-background-color) 50%, transparent);
    }
    .footer-grid {
        padding-block: 56px;
        display: grid;
        grid-template-columns: repeat(1, minmax(0, 1fr));
        gap: 32px;
    }
    .footer-section {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 16px;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
    .footer-title {
        font-size: var(--mjo-font-size-small);
        font-weight: 600;
        color: var(--mjo-foreground-color);
    }
    .footer-links {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }
    .footer-link {
        font-size: var(--mjo-font-size-small);
        color: var(--mjo-foreground-color-low);
        transition: color 200ms;
        text-decoration-line: none;
    }
    .footer-link:hover {
        color: var(--mjo-foreground-color);
    }
    .footer-bottom {
        border-top: solid 1px var(--mjo-border-color-low);
        padding-block: 56px;
        text-align: center;
        font-size: var(--mjo-font-size-small);
        color: var(--mjo-foreground-color-low);
    }
    .footer-bottom-text {
        color: var(--mjo-foreground-color-low);
    }
    .footer-bottom-text.link:hover {
        color: var(--mjo-foreground-color);
    }

    @media (min-width: 768px) {
        .footer-grid {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }

    @media (min-width: 1024px) {
        .footer-grid {
            grid-template-columns: repeat(3, minmax(0, 1fr));
        }
    }
</style>
