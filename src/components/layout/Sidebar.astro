---
export interface Props {
    currentPath?: string;
}

const { currentPath = "" } = Astro.props;

// Navigation structure for documentation
const navigation = [
    {
        title: "Getting Started",
        items: [
            { name: "Introduction", href: "/docs" },
            { name: "Installation", href: "/docs/installation" },
            { name: "Quick Start", href: "/docs/quick-start" },
            { name: "Configuration", href: "/docs/configuration" },
        ],
    },
    {
        title: "Components",
        items: [
            { name: "Overview", href: "/docs/components" },
            { name: "Autocomplete", href: "/docs/components/autocomplete" },
            { name: "Button", href: "/docs/components/button" },
            { name: "Card", href: "/docs/components/card" },
            { name: "Input", href: "/docs/components/input" },
            { name: "Modal", href: "/docs/components/modal" },
            { name: "Navigation", href: "/docs/components/navigation" },
            { name: "Table", href: "/docs/components/table" },
        ],
    },
    {
        title: "Theming",
        items: [
            { name: "Overview", href: "/docs/themes" },
            { name: "Colors", href: "/docs/themes/colors" },
            { name: "Typography", href: "/docs/themes/typography" },
            { name: "Dark Mode", href: "/docs/themes/dark-mode" },
            { name: "Customization", href: "/docs/themes/customization" },
        ],
    },
    {
        title: "Examples",
        items: [
            { name: "Basic Usage", href: "/docs/examples" },
            { name: "Forms", href: "/docs/examples/forms" },
            { name: "Data Display", href: "/docs/examples/data-display" },
            { name: "Layouts", href: "/docs/examples/layouts" },
            { name: "Integrations", href: "/docs/examples/integrations" },
        ],
    },
    {
        title: "Advanced",
        items: [
            { name: "Accessibility", href: "/docs/accessibility" },
            { name: "Performance", href: "/docs/performance" },
            { name: "Testing", href: "/docs/testing" },
            { name: "Migration", href: "/docs/migration" },
        ],
    },
];
---

<aside class="sidebar">
    <nav class="space-y-6">
        {
            navigation.map((section) => (
                <div class="sidebar-section">
                    <h3 class="sidebar-section-title">{section.title}</h3>
                    <ul class="sidebar-nav">
                        {section.items.map((item) => (
                            <li class="sidebar-nav-item">
                                <a
                                    href={item.href}
                                    class={`sidebar-nav-link ${
                                        currentPath === item.href || (item.href !== "/docs" && currentPath.startsWith(item.href))
                                            ? "sidebar-nav-link-active"
                                            : ""
                                    }`}
                                >
                                    <span>{item.name}</span>
                                    {/* Badge for new/beta items */}
                                    {item.name === "Autocomplete" && <span class="badge badge-default text-[10px] px-1.5 py-0.5">New</span>}
                                    {item.name === "Testing" && <span class="badge badge-secondary text-[10px] px-1.5 py-0.5">Beta</span>}
                                </a>
                            </li>
                        ))}
                    </ul>
                </div>
            ))
        }
    </nav>

    <!-- Version Info -->
    <div class="mt-8 pt-6 border-t border-border">
        <div class="px-3">
            <div class="flex items-center justify-between text-xs text-muted-foreground">
                <span>Version</span>
                <span class="font-mono">v1.0.0</span>
            </div>
            <div class="mt-2">
                <a
                    href="https://github.com/username/mjo-litui/releases"
                    class="text-xs text-muted-foreground hover:text-foreground transition-colors"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    View releases â†’
                </a>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-4">
        <div class="px-3 space-y-2">
            <a
                href="https://github.com/username/mjo-litui/issues/new"
                class="block text-xs text-muted-foreground hover:text-foreground transition-colors"
                target="_blank"
                rel="noopener noreferrer"
            >
                Report an issue
            </a>
            <a href="/docs/contributing" class="block text-xs text-muted-foreground hover:text-foreground transition-colors"> Contribute </a>
        </div>
    </div>
</aside>
<style>
    @reference "../../styles/global.css";

    .sidebar {
        @apply sticky top-20 h-[calc(100vh-5rem)] overflow-y-auto pb-10;
    }

    .sidebar-section {
        @apply mb-6;
    }

    .sidebar-section-title {
        @apply mb-3 px-3 text-xs font-semibold uppercase tracking-wide text-muted-foreground;
    }

    .sidebar-nav {
        @apply flex flex-col gap-1;
    }

    .sidebar-nav-item {
        @apply block;
    }

    .sidebar-nav-link {
        @apply flex items-center gap-3 rounded-lg px-3 py-2 text-sm font-medium text-muted-foreground transition-all duration-200 no-underline hover:bg-accent hover:text-accent-foreground;
    }

    .sidebar-nav-link-active {
        @apply bg-accent text-accent-foreground;
    }

    .sidebar-nav-icon {
        @apply w-4 h-4 shrink-0;
    }

    /* Table of Contents */
    .toc {
        @apply sticky top-20 h-[calc(100vh-5rem)] overflow-y-auto;
    }

    .toc-title {
        @apply mb-4 text-sm font-semibold text-foreground;
    }

    .toc-nav {
        @apply flex flex-col gap-2;
    }

    .toc-link {
        @apply block py-1 text-xs text-muted-foreground transition-colors duration-200 no-underline hover:text-foreground;
    }

    .toc-link-active {
        @apply text-primary border-l-2 border-primary pl-2;
    }
</style>
