<script>
    // Code tab switching
    document.addEventListener("DOMContentLoaded", () => {
        const tabs = document.querySelectorAll(".code-tab") as NodeListOf<HTMLElement>;
        const blocks = document.querySelectorAll(".code-block") as NodeListOf<HTMLElement>;

        tabs.forEach((tab) => {
            tab.addEventListener("click", () => {
                const target = tab.dataset.tab;

                // Update tab states
                tabs.forEach((t) => t.classList.remove("code-tab-active"));
                tab.classList.add("code-tab-active");

                // Update code block visibility
                blocks.forEach((block) => {
                    if (block.dataset.content === target) {
                        block.style.display = "block";
                    } else {
                        block.style.display = "none";
                    }
                });
            });
        });

        // Copy functionality
        const copyBtn = document.querySelector(".code-copy") as HTMLElement;
        copyBtn?.addEventListener("click", () => {
            const activeBlock = document.querySelector('.code-block[style="display: block;"], .code-block:not([style])');
            const text = activeBlock?.textContent || "";

            navigator.clipboard.writeText(text).then(() => {
                // Show feedback
                const originalHTML = copyBtn.innerHTML;
                copyBtn.innerHTML = `
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        `;

                setTimeout(() => {
                    copyBtn.innerHTML = originalHTML;
                }, 2000);
            });
        });
    });
</script>
