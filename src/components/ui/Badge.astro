---
export interface Props {
    label?: string;
    variant?: "default" | "secondary" | "destructive" | "outline";
}

const { label = "v1.0.0 Released", variant = "default" } = Astro.props;

// Force Tailwind to include these utility classes
// bg-destructive text-destructive-foreground bg-destructive/80 ring-primary ring-offset-2
---

<span class={`badge badge-${variant}`}>{label}</span>

<style>
    @reference "../../styles/global.css";

    .badge {
        @apply inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors;
    }

    .badge:focus {
        @apply outline-none ring-2 ring-primary ring-offset-2;
    }

    .badge-default {
        @apply border-transparent bg-primary text-primary-foreground;
    }

    .badge-default:hover {
        @apply bg-primary/80;
    }

    .badge-secondary {
        @apply border-transparent bg-secondary text-secondary-foreground;
    }

    .badge-secondary:hover {
        @apply bg-secondary/80;
    }

    .badge-destructive {
        @apply border-transparent bg-destructive text-destructive-foreground;
    }

    .badge-destructive:hover {
        @apply bg-destructive/80;
    }

    .badge-outline {
        @apply text-foreground;
    }
</style>
