---
interface Props {
    tag: "section" | "main" | "div";
    [key: string]: any;
}

const { tag = "section", class: className, ...rest } = Astro.props;

const Element = tag;
---

<Element class={`container ${className}`}>
    <slot />
</Element>;

<style>
    @reference "../../styles/global.css";

    .container {
        @apply mx-auto max-w-7xl px-4 sm:px-6 lg:px-8;
    }
</style>
