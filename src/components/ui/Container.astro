---
interface Props {
    tag: "section" | "main" | "div";
    [key: string]: any;
}

const { tag = "section", class: className, ...rest } = Astro.props;

const Element = tag;
---

<Element class:list={["container", className]} {...rest}>
    <slot />
</Element>

<style>
    .container {
        position: relative;
        margin: 0 auto;
        max-width: 1280px;
        padding-inline: 16px;
    }
    @media (min-width: 640px) {
        .container {
            padding-inline: 24px;
        }
    }
    @media (min-width: 1024px) {
        .container {
            padding-inline: 32px;
        }
    }
</style>
