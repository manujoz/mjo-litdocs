---
export interface Props {
    tag?: "ul" | "ol";
    listStyle?: "none" | "disc" | "circle" | "square" | "decimal" | "lower-alpha" | "upper-alpha" | "lower-roman" | "upper-roman";
    class?: string;
    dense?: boolean;
}

const { tag = "ul", dense = false, class: className, listStyle = "none" } = Astro.props;

const Element = tag;
---

<Element class:list={["container", dense ? "list-dense" : "", `list-style-${listStyle}`, className]} {...Astro.props}>
    <slot />
</Element>

<style>
    .container {
        margin: 0;
        padding: 0;
    }
    .container > :global(li) {
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
    }
    .container.list-dense > :global(li) {
        margin-top: 0.1rem;
        margin-bottom: 0.1rem;
    }
    .container.list-style-none {
        list-style: none;
    }
    .container.list-style-disc {
        list-style: disc;
        padding-left: 1.5rem;
    }
    .container.list-style-circle {
        list-style: circle;
        padding-left: 1.5rem;
    }
    .container.list-style-square {
        list-style: square;
        padding-left: 1.5rem;
    }
    .container.list-style-decimal {
        list-style: decimal;
        padding-left: 1.5rem;
    }
    .container.list-style-lower-alpha {
        list-style: lower-alpha;
        padding-left: 1.5rem;
    }
    .container.list-style-upper-alpha {
        list-style: upper-alpha;
        padding-left: 1.5rem;
    }
    .container.list-style-lower-roman {
        list-style: lower-roman;
        padding-left: 1.5rem;
    }
    .container.list-style-upper-roman {
        list-style: upper-roman;
        padding-left: 1.5rem;
    }
</style>
