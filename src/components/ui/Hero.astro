---
import Badge from "./Badge.astro";
import Button from "./Button.astro";
import Container from "./Container.astro";
import Logo from "./Logo.astro";
import Version from "./Version.astro";
---

<section class="hero-section">
    <Container tag="div">
        <div class="hero-content">
            <div class="hero-badge">
                <Badge variant="secondary">
                    <Version suffix="Released" />
                </Badge>
            </div>
            <p class="hero-title">Build beautiful interfaces with</p>
            <p class="logo">
                <Logo type="vertical" />
            </p>
            <div class="hero-description">
                <h1 class="inline-block font-bold">A modern Lit component library designed for developers</h1> who want to create stunning user interfaces with minimal
                effort. Built with TypeScript, accessibility-first, and fully customizable.
            </div>
            <div class="hero-actions">
                <div class="hero-action">
                    <Button href="/docs" size="lg">Get Started</Button>
                </div>
                <div class="hero-action right">
                    <Button href="/docs/components" variant="outline" size="lg">Components</Button>
                </div>
            </div>
        </div>
    </Container>
</section>

<style>
    .hero-section {
        position: relative;
        overflow: hidden;
        padding-top: 96px;
        padding-bottom: 96px;
    }
    .hero-content {
        position: relative;
        z-index: 1;
        text-align: center;
    }
    .hero-badge {
        margin-bottom: 24px;
    }
    .hero-title {
        font-size: 2.5em;
        font-weight: bold;
        padding-top: 50px;
        text-wrap: balance;
    }
    .logo {
        position: relative;
        margin: 0 auto;
        max-width: 240px;
        padding-top: 40px;
        padding-bottom: 40px;
    }
    .hero-description {
        position: relative;
        margin: 24px auto 0;
        max-width: 800px;
        font-size: 1.15em;
        color: var(--mjo-foreground-color-low);
        text-wrap: pretty;
    }
    .hero-actions {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 24px;
        margin-top: 40px;
    }
    .hero-action {
        flex: 1;
        display: flex;
        justify-content: flex-end;
    }
    .hero-action.right {
        justify-content: flex-start;
    }
    @media (min-width: 1024px) {
        .hero-section {
            padding-top: 128px;
            padding-bottom: 128px;
        }
        .hero-title {
            font-size: 3.5em;
        }
    }
</style>
