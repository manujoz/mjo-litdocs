---
import "../styles/global.css";
import Font from "astro/components/Font.astro";
import { ThemeComponent } from "../components/lit/theme-component";
import { MjoThemeSSRGenerator } from "mjo-litui/lib/theme";
import { themeConfig } from "@/utils/theme";

export interface Props {
    title: string;
    description?: string;
    ogImage?: string;
    keywords?: string;
    author?: string;
    canonicalUrl?: string;
}

const {
    title,
    description = "Modern documentation for Lit component library",
    ogImage = "/og-default.jpg",
    keywords = "lit element, web components, ui library, typescript, javascript",
    author = "MJO LITUI",
    canonicalUrl,
} = Astro.props;

// Get theme from cookie
const mjoThemeCookie = (Astro.cookies.get("mjo-theme")?.value as "light" | "dark") || "dark";
---

<!doctype html>
<html lang="en" class={mjoThemeCookie}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="keywords" content={keywords} />
        <meta name="author" content={author} />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="theme-color" content="#1aa8ed" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
        <meta name="generator" content={Astro.generator} />

        <!-- Open Graph -->
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:image" content={ogImage} />
        <meta property="og:site_name" content="MJO LITUI Documentation" />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={ogImage} />
        <meta name="twitter:creator" content="@mjolitui" />
        <Fragment set:html={MjoThemeSSRGenerator({ themeMode: mjoThemeCookie, userConfig: themeConfig })} />
        <Font cssVariable="--font-montserrat" />

        <title>{title}</title>

        <!-- Schema.org JSON-LD -->
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "SoftwareApplication",
                "name": "MJO LITUI",
                "description": "Modern Lit component library for building beautiful user interfaces",
                "applicationCategory": "DeveloperApplication",
                "operatingSystem": "Web Browser",
                "offers": {
                    "@type": "Offer",
                    "price": "0",
                    "priceCurrency": "USD"
                },
                "author": {
                    "@type": "Organization",
                    "name": "MJO LITUI",
                    "url": "https://mjo-litui.dev"
                },
                "url": "https://mjo-litui.dev",
                "downloadUrl": "https://www.npmjs.com/package/mjo-litui",
                "softwareVersion": "1.0.0",
                "programmingLanguage": ["TypeScript", "JavaScript"],
                "keywords": ["lit element", "web components", "ui library", "typescript", "javascript"]
            }
        </script>

        <!-- Theme initialization script - runs before content loads -->
        <script is:inline define:vars={{ themeFromCookie: mjoThemeCookie }}>
            // Initialize theme before page renders to prevent flash
            (function () {
                const cookieTheme = themeFromCookie;
                const savedTheme = localStorage.getItem("theme");

                // Priority: cookie -> localStorage -> default (dark)
                const theme = cookieTheme || savedTheme || "dark";

                if (theme === "light") {
                    document.documentElement.classList.remove("dark");
                } else {
                    document.documentElement.classList.add("dark");
                }

                // Sync localStorage with the determined theme
                localStorage.setItem("theme", theme);
            })();
        </script>
    </head>
    <body class={`${mjoThemeCookie}`}>
        <ThemeComponent client:idle />
        <slot />
    </body>
</html>
