---
import Footer from "../components/layout/Footer.astro";
import Header from "../components/layout/Header.astro";
import ParticlesBackground from "../components/ui/ParticlesBackground.astro";
import BaseLayout from "./BaseLayout.astro";

export interface Props {
    title?: string;
    description?: string;
}

const { title = "MJO-LITUI - Lit Element Library", description = "Modern Lit component library for building beautiful user interfaces" } = Astro.props;
---

<BaseLayout title={title} description={description}>
    <div class="landing-layout">
        <ParticlesBackground />
        <Header />
        <main class="landing-main">
            <slot />
        </main>
        <Footer />
    </div>
</BaseLayout>
